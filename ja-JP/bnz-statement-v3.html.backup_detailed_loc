                    if (!bankLogo) return;
                    
                    let attemptCount = 0;
                    const maxAttempts = 3;
                    
                    function tryLoadLogo() {
                        attemptCount++;
                        console.log(`å°è¯•åŠ è½½Logo (ç¬¬${attemptCount}æ¬¡)...`);
                        
                        // æ£€æŸ¥Logoæ˜¯å¦æˆåŠŸåŠ è½½
