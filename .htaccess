# VaultCaddy Apache Configuration
# 設置首頁重定向和優化配置

# 設置默認首頁
DirectoryIndex index.html

# 啟用重寫引擎
RewriteEngine On

# 強制HTTPS（生產環境）
RewriteCond %{HTTPS} off
RewriteCond %{HTTP_HOST} ^(www\.)?vaultcaddy\.com$ [NC]
RewriteRule ^(.*)$ https://vaultcaddy.com/$1 [R=301,L]

# 統一域名（移除www）
RewriteCond %{HTTP_HOST} ^www\.vaultcaddy\.com$ [NC]
RewriteRule ^(.*)$ https://vaultcaddy.com/$1 [R=301,L]

# 設置緩存頭
<IfModule mod_expires.c>
    ExpiresActive On
    
    # 圖片緩存1個月
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"
    ExpiresByType image/webp "access plus 1 month"
    
    # CSS和JS緩存1週
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresByType text/javascript "access plus 1 week"
    
    # HTML文件緩存1小時
    ExpiresByType text/html "access plus 1 hour"
    
    # 字體緩存1個月
    ExpiresByType font/woff2 "access plus 1 month"
    ExpiresByType font/woff "access plus 1 month"
    ExpiresByType font/ttf "access plus 1 month"
</IfModule>

# 啟用Gzip壓縮
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# 安全頭設置
<IfModule mod_headers.c>
    # 防止點擊劫持
    Header always append X-Frame-Options SAMEORIGIN
    
    # 防止MIME類型嗅探
    Header set X-Content-Type-Options nosniff
    
    # 啟用XSS保護
    Header set X-XSS-Protection "1; mode=block"
    
    # 引用者政策
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    
    # 內容安全政策（基本設置）
    Header set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://apis.google.com https://www.googleapis.com https://cdnjs.cloudflare.com; style-src 'self' 'unsafe-inline' https://cdnjs.cloudflare.com https://fonts.googleapis.com; font-src 'self' https://cdnjs.cloudflare.com https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://apis.google.com https://www.googleapis.com;"
</IfModule>

# 錯誤頁面
ErrorDocument 404 /index.html
ErrorDocument 403 /index.html
ErrorDocument 500 /index.html

# 阻止訪問敏感文件
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

<Files "*.log">
    Order allow,deny
    Deny from all
</Files>

<Files "config.js">
    Order allow,deny
    Allow from all
</Files>

# 阻止直接訪問某些文件類型
<FilesMatch "\.(md|txt|log|bak|backup)$">
    Order allow,deny
    Deny from all
</FilesMatch>
